        <property name="template" value="kenyaemrextras:pmtct/rri/missed_DTG_optimization_template.xls" />
        <property name="repeatingSection" value="sheet:1,row:6,dataset:missedDTGOptimizationCohort" />
    </bean>
    <bean id="kenyaemrextras.mchms.report.missedHIVandsyphilistest" class="org.openmrs.module.kenyacore.report.HybridReportDescriptor">
        <property name="targetUuid" value="04d468a4-bb69-447d-82fa-0aad40c55421" />
        <property name="name" value="Missed HIV and Syphilis Test" />
        <property name="description" value="MCH mothers who missed HIV and Syphilis testing" />
