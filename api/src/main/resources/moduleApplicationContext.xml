    <bean id="kenyaemrextras.mchms.report.missedinfantprophylaxis" class="org.openmrs.module.kenyacore.report.HybridReportDescriptor">
        <property name="targetUuid" value="808bb508-da55-4550-8d51-4841e791232b" />
